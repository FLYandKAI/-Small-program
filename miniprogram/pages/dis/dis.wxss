
.header {
    box-sizing: border-box;
    border-top: 1rpx solid #ececec;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    z-index: 1;
    position: relative;
    top: 0rpx;
}
.scroll_top{
  width: 100%;
  height: 100rpx;
  white-space: nowrap;
}
.header .item{
  height: 75rpx;
  width: 170rpx;
  display: inline-block;
  font-size: 34rpx;
  color: #FFFFFF;
  line-height: 75rpx;
  background: #99ccff;
  border-radius: 80rpx;
  margin: 10rpx;
}
.header .on{ 
  color: #FFFFFF;  
  background: linear-gradient(to right, #6E7AEA, #A25EF1);
}   


