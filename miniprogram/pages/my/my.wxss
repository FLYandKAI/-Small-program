/* pages/dis/dis.wxss */
.head{
  overflow: hidden;
  border-radius:60%;
   width: 150rpx;  
  height: 150rpx;  
    margin: 20rpx;  
}
.float{
  float: left;
}
.name{
  line-height: 50rpx;
  margin-top: 75rpx;
  margin-left: 100rpx;
  font-size: 50rpx;
  position: relative;
}
.login_button{
  margin-top: 75rpx;
  margin-left: 70rpx;
}
.dis_container{
  background-color: rgb(106, 177, 243);
  height:200rpx;
  width: 100%;
}

.segment{
  height: 15rpx;
  width: 100%;
  background-color: #cfcfd4
}
.my{
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.my_items{
border-left: 1rpx solid #cfcfd4;
flex: 1;
text-align: center;
}
.my_items image{
  width: 80rpx;
  height: 80rpx;
}
.my_items view{
  font-size: 28rpx;
}
.userlist{
  background-color: #ebebec;
  position: relative;
  display: flex;
  align-items: center;
  margin-top: 5rpx;
}
.list_item{
display: inline-block;
width: 100%;
}
.list_item image{
  margin-right: 5px;
  vertical-align: middle;
  width: 29px;
  height: 29px;
  margin: 25rpx;
}
.list_item text{
  display: inline-block;
  font-size: 40rpx;
  color: #737374;
}
.list_item .arrow{
  float: right;
  margin-top: 25rpx;
  margin-right: 2rpx;
}


