/* pages/home/home.wxss */
/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.auto_image{
  width: 100%;
  height: 100%;
  display: block;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
swiper{
  width: 750rpx;
  height: 400rpx
}
swiper-item image{
  width: 100%;
  height: 100%;
}
.scroll-wrap{
  width: 100%;
  white-space: nowrap;
  border-top: solid 5rpx;
  border-top-color: #99ccff;
}
.srcoll-item{
  font-size: 36rpx; 
  width: rpx;
  display: inline-block;
  margin: 10rpx 40rpx;
}
.active{
  padding: 10rpx;
  border-bottom: solid 4rpx;
  border-bottom-color:  #99ccff;
  color: #99ccff;
}
.my-method{
  display: flex;
  flex-wrap: wrap;
}
.my-method >.method-item{
  width: 50%;
  position: relative;
}